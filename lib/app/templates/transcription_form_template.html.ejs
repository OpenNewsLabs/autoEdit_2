    </div><!-- ./col -->
    <!-- Title and description -->
    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
      <div class="form-group">
        <label for="title">Title of Transcription</label>
        <input type="text" name="title" value="<%= title %>" class="form-control" id="title" placeholder="e.g. Interview with Elon Musk" required>
      </div>
      <div class="form-group">
        <label for="description">Description (optional)</label>
        <textarea class="form-control"  name="description" rows="3" id="description"  placeholder="e.g. Speaking with Space X and Tesla CEO about the simulation theory"><%= description %></textarea>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
       <!--  <a id="submitBtn" class="btn btn-primary">Save Transcription</a> -->
