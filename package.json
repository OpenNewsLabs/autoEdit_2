{
  "name": "autoEdit2",
  "version": "1.0.6",
  "description": "Text based video editing app",
  "main": "nwjs/index.html",
  "chromium-args": "--mixed-context",
  "dom_storage_quota": 5,
  "window": {
    "show": true,
    "frame": true,
    "toolbar": true,
    "always_on_top": false,
    "fullscreen": false,
    "show_in_taskbar": true,
    "transparent": false,
    "icon": "assets/nw.icns",
    "width": 800,
    "height": 670,
    "position": "mouse",
    "min_width": 770,
    "max_width": 1300,
    "min_height": 500
  },
  "platformOverrides": {
    "win": {
      "window": {
        "toolbar": false
      }
    },
    "osx": {
      "window": {
        "toolbar": false
      }
    },
    "linux": {
      "window": {
        "toolbar": false
      }
    }
  },
  "scripts": {
    "test": "jasmine",
    "watch_js": "watchify --debug lib/app/app.js --verbose --poll -o nwjs/app.js",
    "start": "nw",
    "make_js": "browserify lib/app/app.js > nwjs/app.js",
    "make_nw": "node build.js",
    "make_dmg": "appdmg appdmg.json ~/Desktop/autoEdit2_installer.dmg",
    "page": "jekyll serve --source ./docs --destination ./docs/_site --watch",
    "docs": "docco -o ./docs/docco_docs --title 'autoEdit 2 Documentation' ./nwjs/*.js ./lib/**/*.js",
    "jsdoc": "jsdoc *.js  -c ./config/jsdoc_conf.json",
    "make_demo": "node ./config/make_demo.js",
    "build": "npm install && npm run make_js && npm run make_nw && npm run make_dmg",
    "start_make_js": "npm run make_js && npm start"
  },
  "author": "Pietro Passarelli <pietro.passarelli@gmail.com> (http://pietropassarelli.com)",
  "license": "ISC",
  "dependencies": {
    "backbone": "^1.3.3",
    "bootstrap": "^3.3.7",
    "browserify-shim": "^3.8.12",
    "file-saver": "^1.3.3",
    "fluent-ffmpeg": "^2.1.0",
    "jquery": "1.12.4",
    "linvodb3": "^3.24.0",
    "medeadown": "^1.1.8",
    "moment": "^2.15.2",
    "mousetrap": "^1.6.0",
    "node-timecodes": "^2.4.1",
    "node-underscorify": "0.0.14",
    "nw": "^0.12.3",
    "path": "^0.12.7",
    "require-globify": "^1.4.1",
    "underscore": "^1.8.3",
    "underscore.string": "^3.3.4",
    "watson-developer-cloud": "^2.4.1"
  },
  "devDependencies": {
    "appdmg": "^0.4.5",
    "browserify": "^13.1.1",
    "copy-dir": "^0.3.0",
    "docco": "^0.7.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "jasmine": "^2.5.2",
    "jsdoc": "^3.4.1",
    "nw-builder": "^2.2.6",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      [
        "node-underscorify",
        {
          "extensions": [
            "ejs"
          ],
          "requires": [
            {
              "variable": "_",
              "module": "underscore"
            }
          ]
        }
      ],
      "browserify-shim",
      "require-globify"
    ]
  },
  "browser": {
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js",
    "backbone.mousetrap": "./vendor/backbone.mousetrap.js"
  },
  "browserify-shim": {
    "bootstrap": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "backbone.mousetrap": {
      "depends": [
        "underscore:_",
        "backbone:Backbone",
        "mousetrap:Mousetrap"
      ]
    }
  }
}
